    {
      "parameters": {
        "jsCode": "// Processar resultados dos testes\nconst loginResult = $node['Teste de Login'].json;\nconst itemsResult = $node['Teste de Itens'].json;\nconst monstersResult = $node['Teste de Monstros'].json;\nconst npcsResult = $node['Teste de NPCs'].json;\nconst storiesResult = $node['Teste de Hist√≥rias'].json;\nconst frontendResult = $node['Teste Frontend'].json;\n\n// Verificar se todos os testes passaram\nconst testResults = {\n  timestamp: new Date().toISOString(),\n  login: {\n    status: loginResult.access_token ? 'PASS' : 'FAIL',\n    token_received: !!loginResult.access_token\n  },\n  items: {\n    status: Array.isArray(itemsResult) && itemsResult.length > 0 ? 'PASS' : 'FAIL',\n    count: Array.isArray(itemsResult) ? itemsResult.length : 0\n  },\n  monsters: {\n    status: Array.isArray(monstersResult) && monstersResult.length > 0 ? 'PASS' : 'FAIL',\n    count: Array.isArray(monstersResult) ? monstersResult.length : 0\n  },\n  npcs: {\n    status: Array.isArray(npcsResult) && npcsResult.length > 0 ? 'PASS' : 'FAIL',\n    count: Array.isArray(npcsResult) ? npcsResult.length : 0\n  },\n  stories: {\n    status: Array.isArray(storiesResult) && storiesResult.length > 0 ? 'PASS' : 'FAIL',\n    count: Array.isArray(storiesResult) ? storiesResult.length : 0\n  },\n  frontend: {\n    status: frontendResult && !frontendResult.error ? 'PASS' : 'FAIL'\n  }\n};\n\n// Calcular score geral\nconst totalTests = Object.keys(testResults).length - 1; // -1 para excluir timestamp\nconst passedTests = Object.values(testResults).filter(test => \n  typeof test === 'object' && test.status === 'PASS'\n).length;\n\ntestResults.overall = {\n  score: `${passedTests}/${totalTests}`,\n  percentage: Math.round((passedTests / totalTests) * 100),\n  status: passedTests === totalTests ? 'ALL_PASS' : 'SOME_FAIL'\n};\n\nreturn testResults;"
      },
