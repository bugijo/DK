# Configurações do Servidor
PORT=3000
NODE_ENV=development

# Configurações do Banco de Dados (Supabase/Postgres)
# Use DATABASE_URL pronta ou os campos abaixo para montar a URL automaticamente.
DATABASE_URL=
DB_HOST=
DB_PORT=5432
DB_USER=
DB_PASSWORD=
DB_NAME=

SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_KEY=your_supabase_service_role_key

# Configurações de Autenticação
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_refresh_token_secret
JWT_REFRESH_EXPIRES_IN=30d

# Configurações de Segurança
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configurações de Log
LOG_LEVEL=info

# Configurações de Email (opcional para futuras funcionalidades)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM=noreply@vetclinic.com
